<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

        
                          
                            <xpath expr="//field[@name='website']" position="after">
                                
                                <field name="x_contact_medium" placeholder="Email/Phone/Others"/> 
                                <field name="service" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True ,}" placeholder="Services"/>
                                <field name="lead_source"/>
                               
                            </xpath>

                            <xpath expr="//field[@name='function']" position="after">

                                <field name="lead_issue"/>
                                <field name="proposal_date" placeholder="Select date"/>
                            
                            </xpath>



                            <xpath expr="//field[@name='phone_blacklisted']" position="after">

                                <field name="service" widget="many2many_tags"
                                                options="{'color_field': 'color', 'no_create': True , 'clickable': '1'}" placeholder="Services"
                                                visible ="type == 'opportunity' or active"/>
                                <field name="lead_issue"/>
                                <field name="proposal_date" placeholder="Select date"/>
                            </xpath>
        </field>
    </record>
</odoo>




