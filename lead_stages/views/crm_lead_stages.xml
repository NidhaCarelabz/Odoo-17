<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <!-- Tree View Definition -->
    <record id="view_crm_lead_stage_tree" model="ir.ui.view">
        <field name="name">crm.lead.stage.tree</field>
        <field name="model">crm.lead.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name" readonly="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View Definition -->
    <record id="view_crm_lead_stage_form" model="ir.ui.view">
        <field name="name">crm.lead.stage.form</field>
        <field name="model">crm.lead.stage</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Action Definition -->
    <record id="action_crm_lead_stages" model="ir.actions.act_window">
        <field name="name">Lead Stages</field>
        <field name="res_model">crm.lead.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Definition -->
    <menuitem id="menu_crm_lead_stages" parent="crm.menu_crm_config_lead" name="Lead Stages" sequence="0"
              action="action_crm_lead_stages"/>
    </data>

</odoo>
