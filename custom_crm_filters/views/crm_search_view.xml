<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_crm_lead_search_contact_inherited" model="ir.ui.view">
      <field name="name">crm.lead.search.lead.inherited</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@expand='0']" position="after">
          <filter string="Contact Group" name="filter_by_contact_group">
            <field name="contact_group_ids"/>
          </filter>
        </xpath>
      </field>
    </record>

<record id="crm_lead_form_inherit" model="ir.ui.view">
  <field name="name">crm.lead.form.inherit</field>
  <field name="model">crm.lead</field>
  <field name="inherit_id" ref="crm.crm_lead_view_form"/>
  <field name="arch" type="xml">
    <xpath expr="//field[@name='lead_source']" position="after">
      <field name="contact_group_ids" widget="many2many_tags"
        options="{'no_create': True , 'clickable': '1'}" placeholder="Contact Groups"/>
    </xpath>
  </field>
</record>

  </data>
</odoo>