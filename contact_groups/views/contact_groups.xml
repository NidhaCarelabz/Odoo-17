<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

<!-- Define Tree View -->
        <record id="view_contact_groups_tree" model="ir.ui.view">
            <field name="name">res.partner.contactgroups.tree</field>
            <field name="model">res.partner.contactgroups</field> 
            <field name="arch" type="xml">
                <tree string="Contact Groups" multi_edit="1">
                    <field name="contact_groups" widget="many2many_tags"/>
                    <field name="contact_group_name" readonly="1"/>
                </tree>
            </field>
        </record>

        <!-- Define Form View -->
        <record id="view_contact_groups_form" model="ir.ui.view">
            <field name="name">res.partner.contactgroups.form</field>
            <field name="model">res.partner.contactgroups</field> 
            <field name="arch" type="xml">
                <form string="Contact Groups">
                    <group>
                        <group>
                            <field name="contact_group_name"/>
                            <field name="contact_groups"/>                
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!-- Define Action for Contact Groups -->
        <record id="action_contact_groups" model="ir.actions.act_window">
            <field name="name">Contact Groups</field>
            <field name="res_model">res.partner.contactgroups</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Assign Menu Item for Contact Groups -->
        <menuitem id="menu_contact_groups" 
                  name="Contact Groups" 
                  parent="contacts.res_partner_menu_config" 
                  action="action_contact_groups" 
                  sequence="10"/>

    </data>
</odoo>