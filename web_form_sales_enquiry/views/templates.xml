                                                    <option t-att-value="country.phone_code">
                                                        <t t-esc="country.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row mb-sm-3">
                                        <label for="name" class="col-sm-auto col-form-label" style="width: 150px">Mobile *</label>
                                         <!--<input type="text" class="form-control" name="country_code" id="country_code" readonly="readonly" />
                                        <input type="tel" class="form-control col-sm" name="web_sales_enq_mobile" id="web_sales_enq_mobile" required="true" /> -->
