            <input t-if='website.plausible_shared_key' type='hidden' class='js_plausible_push' data-event-name='Lead Generation' data-event-params='{"CTA": "Contact Us"}' />
        </t>
    </template>
    <!-- end sales enquiry thank you form template  -->

    <!-- sales enquiry schedule meeting form template  -->
    <template id="crm_lead_schedule_meeting" name="Schedule Meeting Website">
        <t t-call="website.layout">
            <div id="meeting_schedule_form_div" class="container mt-5">
                <h1>Schedule a Meeeting</h1>
                <p>Please fill in the details below to schedule your meeting. Make sure to select the appropriate date and time for your convenience.</p>
                <form action="/schedule/meeting/submit" method="post" id="meeting_schedule_form"  class="meeting_schedule_form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="lead_id" t-att-value="request.params.get('lead_id')"/>
                    <div class="form-group row mb-3">
                        <label for="meeting_start" class="col-sm-auto col-form-label" style="width: 150px">Start Date and Time *</label>
                        <input type="datetime-local" class="form-control col-sm" name="meeting_start" id="meeting_start" required="required" />
                    </div>
                    <div class="form-group row mb-3">
                        <label for="meeting_end" class="col-sm-auto col-form-label" style="width: 150px">End Date and Time *</label>
                        <input type="datetime-local" class="form-control col-sm" name="meeting_end" id="meeting_end" required="required" />
                    </div>
                    <p id="errorMessage" class="text-danger" style="display: none;"></p>
                    <button type="submit" class="btn btn-primary">Schedule Meeting</button>
                </form>
                <p>We look forward to meeting with you. Please ensure all details are correct before submitting the form.</p>
            </div>
        </t>
    </template>
    <!-- sales enquiry schedule meeting form template  -->



